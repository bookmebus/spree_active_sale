<% if @active_sale.try(:errors).try(:present?) %>
  <%= render :partial => 'spree/shared/error_messages', :locals => { :target => @active_sale } %>
<% end %>

<%= form_for [:admin, @active_sale] do |f| %>
  <div class="row">
    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label Spree.t('active_sale.attributes.name'), class: "text-md" %>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>
    </div>

    <div class="col-lg-12 col-sm-12">
      <div class="form-group">
        <%= f.label Spree.t('active_sale.attributes.permalink'), class: "text-md" %>
        <%= f.text_field :permalink, class: 'form-control border-radius-5' %>
        <%= f.error_message_on :permalink %>
      </div>
    </div>

    <% if @active_sale.new_record? %>
      <div class="col-lg-12 col-sm-12">
        <%= render partial: 'spree/admin/shared/new_resource_links' %>
      </div>
    <% else %>
      <div class="col-lg-12 col-sm-12">
        <%= render partial: 'spree/admin/shared/edit_resource_links' %>
      </div>
    <% end %>
  </div>
<% end %>
