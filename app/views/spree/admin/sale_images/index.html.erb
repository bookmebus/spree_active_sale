<% content_for :page_title do %>
  <%= link_to Spree.t("active_sale.name"), spree.admin_active_sales_url %> /
  <%= link_to @active_sale.name, spree.admin_active_sale_url(@active_sale) %> /
  <%= link_to @active_sale_event.name, [:edit, :admin, @active_sale, @active_sale_event] %> /
  <%= Spree.t('active_sale.event.images.title.list') %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t("active_sale.event.images.link.new"), [:new, :admin, @active_sale, @active_sale_event, :sale_image], { class: "btn-success", icon: 'add.svg', id: 'admin_new_active_sale' } %>
<% end %>

<%= render :partial => 'spree/admin/shared/sale_tabs', :locals => { :current => 'Sale Event Images' } %>
<%= render :partial => 'spree/admin/shared/sale_images', :locals => { :sale_images => @sale_images } %>
